<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/user_bill_row">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/ll_user_bill_row"
            android:padding="11dp"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="@string/date"
                    android:textSize="15sp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/text_bill_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="Date"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#1566e0"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="@string/product_name"
                    android:textSize="15sp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/text_prod_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="Prod_Name"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#1566e0"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="@string/quantity"
                    android:textSize="15sp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/text_item_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#1566e0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="@string/amount_recieved"
                    android:textSize="15sp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="60dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/text_amt_recieved_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#1566e0" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>